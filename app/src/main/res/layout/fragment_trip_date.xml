<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrayandWhite"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".ViewLayer.Fragments.tripManagementFragments.TripDateFragment">

        <!-- TODO: Update blank fragment layout -->


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/font_style_bold"
                    android:gravity="left"
                    android:text="add Dates"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/W_WrapSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/font_style_medium"
                    android:gravity="center"
                    android:text="Arrival Date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <DatePicker
                    android:id="@+id/startDateID"
                    style="@style/W_WrapSize"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:endYear="2030"
                    android:startYear="2020" />

                <TextView
                    style="@style/W_WrapSize"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/font_style_medium"
                    android:gravity="center"
                    android:text="Departure"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <DatePicker
                    android:id="@+id/endDateID"
                    style="@style/W_WrapSize"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:endYear="2030"
                    android:startYear="2020" />

                <Button
                    android:id="@+id/select_date"
                    style="@style/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/font_style_regular"
                    android:gravity="center"
                    android:text="select Trip Date"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
